
@model aspnetcore.blog.Models.Contact
@inject Microsoft.Extensions.Configuration.IConfiguration _config;
@{
    ViewData["Title"] = "Contact";
}
@section MetaContent{
    <meta name="description" content="contact us page" />
}
<script src="https://www.google.com/recaptcha/api.js"></script>

<section class="section section-lg section-shaped">
    <div class="container py-md">
        <div class="row row-grid justify-content-between align-items-center">

            <div class="col-lg-5 mb-lg-auto">
                <div class="transform-perspective-right">
                    <div class="card bg-secondary shadow border-0">
                        <div class="card-header bg-white pb-5">
                            <div class="text-muted text-center mb-3">Contact me</div>

                        </div>
                        <div class="card-body px-lg-5 py-lg-5">
                            @if (TempData["msg"] != null)
                            {
                                <div class="text-center text-muted mb-4">
                                    <small class="text-success">@TempData["msg"].ToString()</small>
                                </div>
                            }
                            <form method="post">
                                <div class="form-group mb-3">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-single-02"></i></span>
                                        </div>
                                        <input class="form-control" asp-for="Firstname" placeholder="Name">
                                    </div>
                                    <span asp-validation-for="Firstname" class="text-danger small"></span>
                                </div>
                                <div class="form-group focused">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                        </div>
                                        <input class="form-control" asp-for="Email" placeholder="Email">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-align-center"></i></span>
                                        </div>
                                        <textarea class="form-control form-control-alternative" asp-for="Message" rows="3" placeholder="Message ..."></textarea>
                                    </div>
                                    <span asp-validation-for="Message" class="text-danger small"></span>
                                </div>
                                <div class="g-recaptcha" data-sitekey="@_config["GoogleReCaptcha:key"]"></div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary my-4">Send</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- SVG separator -->
    <div class="separator separator-bottom separator-skew">
        <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <polygon class="fill-white" points="2560 0 2560 100 0 100"></polygon>
        </svg>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.onload = function () {
            var $recaptcha = document.querySelector('#g-recaptcha-response');
            if ($recaptcha) {
                $recaptcha.setAttribute("required", "required");
            }
        };
    </script>
}

